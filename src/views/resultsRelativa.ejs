<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/header') -%>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css" />
        <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
</head>

<body>
    <input type="hidden" name="data" id="data" value="<%=dataTasa%>" />

    <!-- modal Poblacion despues de tiempo -->
    <div class="modal fade" id="sizeAfter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        Población despues de tiempo
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                </div>
                <div class="modal-body">
                    <form action="tasa/after" method="post">
                        <label for="">Ingrese el tiempo transcurido</label>
                        <div class="input-group mb-3">
                            <input type="number" step="any" class="form-control" placeholder="Tiempo" aria-describedby="basic-addon2" name="t" />
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">
                    <%=relative.medicion %>
                  </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                Calcular Población
              </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- modal Poblacion tiempo necesario  -->
    <div class="modal fade" id="sizeTime" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        Tiempo para llegar al tamaño de poblacion
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                </div>
                <div class="modal-body">
                    <form action="tasa/time" method="post">
                        <label for="">Ingrese el tamaño de poblacion</label>
                        <div class="input-group mb-3">
                            <input type="number" class="form-control" placeholder="Tamaño" aria-describedby="basic-addon2" name="nt" />
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">
                    <%=relative.poblation %>
                  </span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                Calcular Tiempo
              </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Modal lista de poblacion por tiempo e intervalo -->
    <div class="modal fade" id="sizeList" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        Listado de población
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                </div>
                <div class="modal-body">
                    <form action="tasa/list" method="post">
                        <div class="form-group">
                            <label for="">Ingrese el tiempo </label>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Tiempo" aria-describedby="basic-addon2" name="t" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">
                      <%=relative.medicion %>
                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Ingrese el Intervalo </label>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Interval" aria-describedby="basic-addon2" name="i" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">
                      <%=relative.medicion %>
                    </span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                Calcular Población
              </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!--Modal Encotrar Tasa relativa -->
    <div class="modal fade" id="tasaRelative" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        Entontrar Tasa Relativa
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                </div>
                <div class="modal-body">
                    <form action="tasa/tasaRelative" method="post">
                        <div class="form-group">
                            <label for="">Población (nt2)</label>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Población" aria-describedby="basic-addon2" name="nt2" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">
                      <%=relative.poblation %>
                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Timepo (t2) </label>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Tiempo" aria-describedby="basic-addon2" name="t2" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">
                      <%=relative.medicion %>
                    </span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                Calcular Población
              </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ---------- -->
    <%- include('partials/nav') -%>

        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-7">
                    <div class="card shadow-lg mb-5 bg-white rounded">
                        <div class="card-body">
                            <h4 class="text-center">
                                Crecimiento exponencial (Tasa Relativa)
                            </h4>
                            <h5>Datos</h5>
                            <div class="row">
                                <div class="col-6 mt-2">
                                    <label>Población Inicial (no):
                    <span id="no"
                      ><strong>
                        <%=relative.no.toFixed(2)%>
                      </strong></span
                    >
                  </label>
                                </div>
                                <div class="col-6 mt-2">
                                    <label for=" ">Tasa de crecimiento relativa (r):
                    <strong>
                      <%=(relative.r*100).toFixed(2) %>%
                    </strong></label
                  >
                </div>
                <div class="col-6 mt-2">
                  <label for=" ">
                    Tiempo transcurido (t):
                    <strong>
                      <%= relative.t %> <%=relative.medicion %>
                    </strong></label
                  >
                </div>
                <div class="col-6 mt-2">
                  <label for=" ">
                    Población actual (nt):
                    <strong>
                      <%= relative.nt %> <%=relative.poblation %>
                    </strong></label
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
              <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <% if(!infoTasa.ini){%> <a class="btn btn-primary m-1" href="/tasa/ini" >Poblacion Inicial</a>    <% } %>
                <a class="btn btn-primary m-1" data-toggle="modal" data-target="#sizeAfter" >Poblacion Despues de</a> 
                <a class="btn btn-primary m-1" data-toggle="modal" data-target="#tasaRelative" >Encontrar Tasa Relativa</a>
                <a class="btn btn-primary m-1" data-toggle="modal" data-target="#sizeList" >Grafica por tiempo</a> 
                <a class="btn btn-primary m-1" data-toggle="modal" data-target="#sizeTime">Tamaño de poblacion</a> 
                <a class="btn btn-primary m-1" href="/tasa" >Ingresar nuevos datos</a>   
                <a class="btn btn-primary m-1" href="/" >Volver a Inicio</a>   

              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="row justify-content-center">
        <% if(infoTasa.ini){ %>
        <div class="col-md-6">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
             <h3> La población inical es de
              <strong>
                <%=relative.no.toFixed(2) %> <%=relative.poblation %>
              </strong>
            </h3>
            </div>
          </div>
        </div>

        <%}%> 
        <% if(infoTasa.tasa){ %>
            <div class="col-md-6">
              <div class="card shadow-lg p-1 mb-2 bg-white rounded">
                <div class="card-body">
                 <h3> La Tasa relativa es de
                  <strong>
                    <%=(relative.r*100).toFixed(2) %>%
                  </strong>
                </h3>
                </div>
              </div>
            </div>
    
            <%}%>
        <% if(infoTasa.time){ %>
        <div class="col-md-6">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
            <h3> La población de
              <strong><%=relative.poblation %> </strong> llegara a
              <strong><%=infoTasa.tm %> </strong> en <strong><%=infoTasa.nt %> </strong>
              <%=relative.medicion %>
            </h3>
            </div>
          </div>
        </div>

        <%}%> <% if(infoTasa.after){ %>
        <div class="col-md-6">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
            <h3>
              El tamaño de la población despues de
              <strong> <%=infoTasa.t %> <%=relative.medicion %> </strong> es de
              <strong> <%=relative.sizeAfter(infoTasa.t) %> </strong>
              <strong> <%=relative.poblation %> </strong></h3>
            </div>
          </div>
        </div>

        <%}%>
      </div>

      <% if(infoTasa.list){ %>
      <div class="row">
        <div class="col-md-6">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
              <h5 class="text-center">Tabla de datos</h5>

              <table class="table">
                <thead>
                  <tr>
                    <th scope="col"><%=relative.medicion %></th>
                    <th scope="col">Cantidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% dataTasa.forEach(function(v){ %>
                  <tr>
                    <th scope="row"><%=v.i %></th>
                    <td><%=v.value %> <%=relative.poblation %></td>
                  </tr>
                  <% });%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card shadow-lg p-1 mb-2 bg-white rounded">
            <div class="card-body">
              <h5 class="text-center">Grafica</h5>
              <div class="ct-chart ct-perfect-fourth"></div>
            </div>
          </div>
        </div>
      </div>

      <%}%>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <script type="text/javascript">
      var rows = <%-JSON.stringify(dataTasa)%>;

      var l = [];
      var s = [];
      rows.forEach(function(r) {
          l.push(r.i)
          s.push(r.value)

      });

      new Chartist.Line('.ct-chart', {
          labels: l,
          series: [s]
      }, {
          fullWidth: true,
          chartPadding: {
              right: 40
          }
      });

      console.log(l, s);
    </script>
  </body>
</html>